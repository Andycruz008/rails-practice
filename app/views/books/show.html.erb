<h1><%= @book.title %></h1>
<h2>Authors:</h2>
<ul>
	<% @book.authors.each do |author| %>
		<li>
			<%= author.name %> (b. <%= author.birth_year %>)
			<%= button_to 'Remove author', {
				:controller => 'books',
				:action		=> 'destroy',
				:author_id 	=> author.id
			},
			:method => :delete %>
		</li>
	<% end %>

	<p><%= form_for @book do |f| %>
        <%= f.collection_select :authors, @authors, :id, :name %>
		<%= f.submit 'Add author to this book' %>
	<% end %></p>
</ul>